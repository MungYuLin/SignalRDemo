@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.signalR-2.2.0.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/signalr/hubs")"></script>

<div class="container">
    <label id="lab_time">time</label>
</div>

<script>
    $(function () {
        var chat = $.connection.timeHub;

        chat.client.timeupdate = function (time) {
            document.getElementById('lab_time').innerText = time;
        };

        $.connection.hub.start()
            .done(function () {
                chat.server.timeUpdate();
            })
    });
</script>